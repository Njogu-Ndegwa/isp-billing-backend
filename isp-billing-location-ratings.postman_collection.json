{
    "info": {
        "name": "ISP Billing - Location & Ratings",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {"key": "baseUrl", "value": "http://localhost:8000"}
    ],
    "item": [
        {
            "name": "Update Customer Location",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/customers/5/location",
                "header": [{"key": "Content-Type", "value": "application/json"}],
                "body": {"mode": "raw", "raw": "{\"latitude\": -1.2921, \"longitude\": 36.8219}"}
            }
        },
        {
            "name": "Capture Location by Phone (Existing)",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/customers/location/by-phone",
                "header": [{"key": "Content-Type", "value": "application/json"}],
                "body": {"mode": "raw", "raw": "{\"phone\": \"0712345678\", \"latitude\": -1.2864, \"longitude\": 36.8172}"}
            }
        },
        {
            "name": "Capture Location by Phone (New Number)",
            "description": "Creates a new customer record if phone doesn't exist",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/customers/location/by-phone",
                "header": [{"key": "Content-Type", "value": "application/json"}],
                "body": {"mode": "raw", "raw": "{\"phone\": \"0788888888\", \"latitude\": -1.2950, \"longitude\": 36.8050}"}
            }
        },
        {
            "name": "Submit Rating (Existing Customer)",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/ratings/submit",
                "header": [{"key": "Content-Type", "value": "application/json"}],
                "body": {"mode": "raw", "raw": "{\"phone\": \"0712345678\", \"rating\": 5, \"comment\": \"Great service!\"}"}
            }
        },
        {
            "name": "Submit Rating (New Phone Number)",
            "description": "Works for any phone number - no existing customer required",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/api/ratings/submit",
                "header": [{"key": "Content-Type", "value": "application/json"}],
                "body": {"mode": "raw", "raw": "{\"phone\": \"0799999999\", \"rating\": 4, \"comment\": \"Good experience!\", \"latitude\": -1.2900, \"longitude\": 36.8100}"}
            }
        },
        {
            "name": "Get All Ratings",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/api/ratings?user_id=1&include_location=true"
            }
        },
        {
            "name": "Get Ratings Summary",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/api/ratings/summary?user_id=1"
            }
        },
        {
            "name": "Get Customers Map Data",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/api/customers/map?user_id=1&with_ratings=true"
            }
        },
        {
            "name": "Get Ratings by Location",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/api/ratings/by-location?user_id=1&min_lat=-1.35&max_lat=-1.20&min_lng=36.70&max_lng=36.90"
            }
        }
    ]
}